html(lang='en')
  head
    title FCC Advanced Node and Express
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.css')
  body
    h1.border.center FCC Advanced Node and Express
    h2.center#pug-success-message
    | Looks like this page is being rendered from Pug into HTML!
    | #{title}
    p#pug-variable=message
    
    
    
    if showLogin
      hr
      h2.center Login Form
      form(action='/login', method='post').center
        div
          label(for='un', title='Enter Your Username') Username:
          input(type='text', name='username', id='un')
        div
          label(for='pwd', title='Enter the password') Password:
          input(type='password', name='password', id='pwd')
        div
          input(type='submit', value='Log In')
          
    if showRegistration
      hr
      h2.center Registration Form
      form(action='/register', method='post').center
        div
          label(for='run', title='Enter Your New Username') Username:
          input(type='text', name='username', id='run')
        div
          label(for='rpwd', title='Enter the New Password') Password:
          input(type='password', name='password', id='rpwd')
        div
          input(type='submit', value='Register')

    if showSocialAuth
      hr
      h2.center Social Login
      .login.center
        a(href='/auth/github').text Login with Github!